<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="100dp"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="502dp"
        android:layout_height="198dp"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/custom_edittext"
        android:elevation="150dp"
        app:cardBackgroundColor="#E7E9EB"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"

        >

        <LinearLayout
            android:layout_width="559dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="166dp"
                android:layout_height="171dp"
                android:scaleType="centerInside"
                android:layout_marginRight="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="182dp"
                android:orientation="vertical"
                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/name_product"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="product name"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="0dp"

                    >


                    <TextView
                        android:id="@+id/sign"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="15dp"
                        android:text="$"
                        android:textColor="@color/black"
                        android:textSize="24dp" />


                    <TextView
                        android:id="@+id/price_product"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="price"
                        android:textColor="@color/black"
                        android:textSize="24dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="0dp">

                    <TextView
                        android:id="@+id/instock"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:background="#29652E"

                        android:text="instock"

                        android:textAlignment="center"

                        android:textColor="@color/white"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:text="quantity:"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/qtynum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:text="1"
                        android:textSize="10sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/remove"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#8F2020"
                    android:text="Remove Item"
                    android:textColor="#E4E3E3"
                    android:textSize="12sp"
                    app:cornerRadius="15dp" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>