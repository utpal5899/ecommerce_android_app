<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#817F7F">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f3f6"
        android:overScrollMode="never"
        android:scrollbars="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">


                <ImageView
                    android:id="@+id/header_image"
                    android:layout_width="93dp"
                    android:layout_height="66dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.048"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/amazonheader" />

                <TextView
                    android:id="@+id/header_heading"
                    android:layout_width="95dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="2in"
                    android:layout_marginTop="20dp"
                    android:text="@string/app_name"
                    android:textColor="#1e3932"
                    android:textSize="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.032" />


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="348dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="349dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="80dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.5in"
                        android:layout_marginTop="10dp"

                        android:text="Order Details"
                        android:textColor="#1e3932"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.032" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="90dp"
                            android:text="name"
                            android:textColor="#707070"
                            android:textSize="18sp"

                            />

                        <TextView
                            android:id="@+id/product_name_check"
                            android:layout_width="210dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="90dp"
                            android:text="boat"
                            android:textAlignment="center"
                            android:textColor="#707070"
                            android:textSize="18sp"

                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="140dp"
                            android:text="price"
                            android:textColor="#707070"
                            android:textSize="18sp"

                            />

                        <TextView
                            android:id="@+id/product_price_check"
                            android:layout_width="167dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="340dp"
                            android:layout_marginTop="140dp"
                            android:text="$99"
                            android:textColor="#707070"
                            android:textSize="18sp"

                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textView60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="105dp"
                                android:layout_marginTop="320dp"
                                android:text="total"
                                android:textColor="@color/black"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/product_price_total"
                                android:layout_width="161dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="250dp"
                                android:layout_marginTop="320dp"
                                android:text="$113"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </RelativeLayout>


                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >




                        <TextView
                            android:id="@+id/textView58"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="190dp"
                            android:text="shipping charge"
                            android:textColor="#707070"
                            android:textSize="18sp" />



                        <TextView
                            android:id="@+id/textView63"
                            android:layout_width="163dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="190dp"
                            android:text="free"
                            android:textColor="#707070"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="489dp"
                        android:layout_height="281dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView59"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="240dp"
                            android:text="GST"
                            android:textColor="#707070"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/textView62"
                            android:layout_width="163dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="240dp"
                            android:text="13%"
                            android:textColor="#707070"
                            android:textSize="18sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="450dp"

                android:layout_height="414dp"

                android:layout_marginLeft="125dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="221dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="0.8in"
                    android:layout_marginTop="30dp"
                    android:text="Personal Details"
                    android:textColor="#1e3932"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.032" />

                <EditText

                    android:id="@+id/editTextTextPersonName65"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"

                    android:layout_marginTop="90dp"
                    android:backgroundTint="#959595"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textSize="16sp"

                    />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="100dp"
                    android:labelFor="@id/editTextTextPersonName65"
                    android:text="First Name"

                    android:textColor="#707070"
                    android:textSize="18sp"

                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="155dp"
                    android:labelFor="@id/editTextTextPersonName73"
                    android:text="Last Name"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="205dp"
                    android:labelFor="@id/editTextTextPersonName5"
                    android:text="email id"
                    android:textColor="#707070"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="255dp"
                    android:labelFor="@id/editTextTextPersonName8"
                    android:text="Phone No"
                    android:textColor="#707070"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="305dp"
                    android:labelFor="@id/editTextTextPersonName6"
                    android:text="address "
                    android:textColor="#707070"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="360dp"
                    android:labelFor="@id/editTextTextPersonName9"
                    android:text="Postal Code"
                    android:textColor="#707070"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/editTextTextPersonName8"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="295dp"
                    android:backgroundTint="#959595"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/editTextTextPersonName9"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="350dp"
                    android:backgroundTint="#959595"
                    android:inputType="textPersonName"
                    android:textColor="#707070"

                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/editTextTextPersonName6"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="245dp"
                    android:backgroundTint="#959595"
                    android:hint="@null"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/editTextTextPersonName5"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="195dp"
                    android:backgroundTint="#959595"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextTextPersonName73"
                    android:layout_width="203dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="145dp"
                    android:backgroundTint="#959595"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textSize="16dp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="469dp"

                android:layout_height="326dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="177dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="0.7in"
                    android:layout_marginTop="30dp"
                    android:text="Debit/Credit Details"

                    android:textColor="#1e3932"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.032" />


                <EditText
                    android:id="@+id/editTextTextPersonName81"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="150dp"
                    android:backgroundTint="#959595"
                    android:hint="card holder"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textColorHint="#959595"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextTextPersonName82"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="100dp"
                    android:backgroundTint="#959595"
                    android:hint="card number"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textColorHint="#959595"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextTextPersonName83"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="200dp"
                    android:backgroundTint="#959595"
                    android:hint="CVV code"
                    android:inputType="textPersonName"
                    android:textColor="#707070"
                    android:textColorHint="#959595"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/place_order"
                    android:layout_width="311dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#EDE9E9"
                    android:text="place order"
                    android:textColor="#000000"
                    app:cornerRadius="15dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>